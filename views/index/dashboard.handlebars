<h1>Welcome to dashboard {{user.firstName}}</h1>
{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href="/stories/show/{{id}}">{{title}}</a></td>
          <td>{{formatDate data 'MMMM do YYYY'}}</td>
          <td>{{status}}</td>
          <td>
            <a href="/stories/edit/{{id}}" class="btn left-align"><i class="fa fa-pencil"></i>Edit</a>
            <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
              <input type="hidden" value="DELETE" name="_method">
              <button type="submit" class="btn red">Delete</button>
            </form>
          </td>

        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You ain't got no stories son..</p>
{{/if}}